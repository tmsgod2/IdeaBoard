<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ranking_recyclerview_layout"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/rank_re_profile_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/rank_re_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/rank_re_profile_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_re_office_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일하는 곳"
        app:layout_constraintBottom_toBottomOf="@+id/rank_re_profile_imageView"
        app:layout_constraintStart_toStartOf="@+id/rank_re_name_textView" />

    <TextView
        android:id="@+id/rank_re_star_textView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ic_star_gold_24dp"
        android:gravity="center"
        android:text="1"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_re_manyStar_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="추천숫자"
        app:layout_constraintBottom_toBottomOf="@+id/rank_re_star_textView"
        app:layout_constraintEnd_toStartOf="@+id/rank_re_star_textView"
        app:layout_constraintTop_toTopOf="@+id/rank_re_star_textView" />

    <ImageView
        android:id="@+id/rank_re_manyStar_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rank_re_star_textView"
        app:layout_constraintEnd_toStartOf="@+id/rank_re_manyStar_textView"
        app:layout_constraintTop_toTopOf="@+id/rank_re_star_textView"
        app:srcCompat="@drawable/ic_star_gold_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>